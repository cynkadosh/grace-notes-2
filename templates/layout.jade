doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')

      title
        block title
          = locals.name

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Merriweather:400,900italic,700italic,400italic,300italic,300,700,900&subset=latin,latin-ext')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
      link(rel='stylesheet', href='/css/main.css')
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-3622200-1', 'auto');
        ga('send', 'pageview');
  body(class=bodyclass)
    include partials/menu
    div.wrapper: div.wrapper-inner
      div.header.container
        block header
          h1= locals.name
          p.description= locals.description
      div#content
        div.container
          block content
            h2 Welcome to Grace Notes!
    footer
      div.container
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
  block footer-scripts
    script(src='https://code.jquery.com/jquery-2.1.3.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/xregexp/2.0.0/xregexp.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/xregexp/2.0.0/unicode-base.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/xregexp/2.0.0/unicode-categories.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/xregexp/2.0.0/unicode-blocks.js')
    script(src='/js/jquery.bibleref.js')
    script(src='/js/jquery.hypher.js')
    script(src='/js/en-us.js')
    script(src='/js/scripts.js')
