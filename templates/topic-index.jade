extends layout

block header
  h1 Topics Library

block content
  - topics = env.helpers.getSortedTopics(contents);
  - topics.forEach(function(t, i){
  -   if (i > 1) t.prevTopic = topics[i-1];
  -   if (i < topics.length - 1) t.nextTopic = topics[i+1]
  - });
  ul.topic-index
    - var alphabet = {}, title;
    each topic in topics
      - if (!topic.title) continue
      - title = topic.metadata.indexTitle || topic.title
      - alphabet[title.toLowerCase().substr(0,1)] = 1
    each val, letter in alphabet
      li
        a(href='#'+letter)= letter
    li
      a(href='#all') all

  - var initial, id, attributes, title;
  each topic in topics
    - title = topic.metadata.indexTitle || topic.title
    - initial = title.toLowerCase().substr(0, 1);
    - attributes = { 'data-initial': initial }
    if initial != id
      - id = initial
      - attributes.id = id
    article.listing&attributes(attributes)
      header.clearfix
        h2: a(href=topic.url)= title
        div.topic-links
          a( href=topic.url, title="html view of "+topic.title)
            i.fa.fa-eye
            | &nbsp;view online
          | &nbsp;
          a( href=topic.url.replace(/\.html$/, '.pdf'), title="pdf download of "+topic.title)
            i.fa.fa-file-pdf-o
            | &nbsp;view pdf
      if topic.metadata && topic.metadata.description
        p.text-muted.description= topic.metadata.description
  script(src="/topics/toc.js")



